<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:layout_marginBottom="0dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="4dp"
    app:cardElevation="5dp"
    app:cardMaxElevation="10dp"
    app:cardPreventCornerOverlap="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:textColor="@android:color/background_dark"
            android:id="@+id/id_tv_note_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            tool:text="第一节，格林公式及其应用" />

        <TextView
            android:textColor="@android:color/black"
            android:textSize="12sp"
            android:id="@+id/id_tv_note_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="3"
            tool:text="定理1，折周期函数为2 的舟曲大家哦啊跑靠谱爱哭和阿虎ISA
        ......" />

        <TextView
            android:id="@+id/id_tv_note_time"
            style="@style/TextAppearance.StatusBar.EventContent.Time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            tool:text="2016/11/01" />
    </LinearLayout>


</android.support.v7.widget.CardView>